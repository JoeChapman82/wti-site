{% macro textInput(id, label, value, errors, size, placeholder, blocked) %}
    <div class="form-element form-element-{{ size }}">
        <label class="block base-label" for="{{ id }}">{{ label }}</label>
        {% if errors %}
            <div class="form-error-messages-wrapper">
                {% for error in errors %}
                    <span class="form-error-message">{{ error }}</span>
                {% endfor %}
            </div>
        {% endif %}
        <input class="block base-input{% if errors %} errored-input{% endif %}{% if blocked %} blocked-input{% endif %}" id="{{ id }}" type="text" name="{{ id }}" value="{{ value }}" {% if placeholder %}placeholder="{{ placeholder }}"{% endif %}{% if blocked %}readonly{% endif %}>
    </div>
{% endmacro %}

