{% macro selectInput(id, label, options, value, errors, size, placeholder, blocked) %}
    <div class="form-element form-element-{{ size }}">
        <label class="block base-label" for="{{ id }}">{{ label }}</label>
        {% if errors %}
            <div class="form-error-messages-wrapper">
                {% for error in errors %}
                    <span class="form-error-message">{{ error }}</span>
                {% endfor %}
            </div>
        {% endif %}
        <select class="block base-select-input{% if errors %} errored-input{% endif %}{% if blocked %} blocked-input{% endif %}" id="{{ id }}" type="text" name="{{ id }}" value="{{ value }}" {% if placeholder %}placeholder="{{ placeholder }}"{% endif %}{% if blocked %}readonly{% endif %}>
            <option value="" selected disabled>Please select</option>
            {% for option in options %}
                <option value="{{ option.value}}" {% if value === option.value %}selected{% endif %} {% if option.target %}data-target="{{ option.target }}"{% endif %}>{{ option.text }}</option>
            {% endfor %}
        </select>
    </div>
{% endmacro %}

